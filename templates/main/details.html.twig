{% extends 'base.html.twig' %}

{% block title %}{{ piece.pceName }}{% endblock %}
{% block metadesc %}Ici vous retrouverez tous les détails concernant chaque pièce{% endblock %}

{% block body %}

<h1>{{ piece.pceName }}</h1>
    <div class="card mb-3">
        <div class="row justify-content-center">
            <div class="col-7">

                <div class="card" style="width: 90%;">
                    <div>
                        {% for image in piece.images %}
                                <img src="{{ asset('img/' ~ image.name) }}" class="w-25" alt="{{ piece.pceName }}">
                        {% endfor %}
            </div>

            <div class="card-body">
                <div class="col-md-8">
                    <h3 class="card-title">{{ piece.pceName|capitalize }}</h3>
                </div>
                <p class="card-text"> {{ piece.pceColor }}</p>
                <p class="card-text"> {{ piece.pceCategory.catNaming }}</p>
                <p class="card-text"> {{ piece.pceCategory.catDescribe }}</p>
                <p class="card-text"><small class="text-body-secondary">{{ piece.pcePrice  }} €</small></p>
                <a href="{{ path('cart_add', {'id': piece.id}) }}" class="btn btn-success" id="addJs">Ajouter au panier</a>
            </div>
        </div>
    </div>
{% endblock %}
